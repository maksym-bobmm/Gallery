= render 'share/menu'
- Category.all.each do |category|
  %div.category-list-main
    %p
      - img = find_popular_image(category)
      - if img.present?
        %p
          = category.name
        = link_to image_tag( "#{img.path.thumb}", alt: img[:path] ), category_path(category)
      - else
        = link_to category.name, category_path(category)
      - if category.owner_id == current_user.id
        %ul.menu
          %li
            = link_to 'rename', edit_category_path(category)
          %li
            -#%a(href='destroy') delete
            = link_to 'delete', category, method: :delete, data: { confirm: 'Are you sure?' }
= link_to 'create category', new_category_path