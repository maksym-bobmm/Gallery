.col-12.col-lg-9
  %h1.text-center= t(:'views.register.edit')
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = bootstrap_devise_error_messages!
    .form-group.text-center
      = f.label t(:'views.register.name'), class: 'text-center'
      = f.text_field :first_name, autofocus: true, class: 'form-control'
    .form-group.text-center
      = f.label t(:'views.register.lastname'), class: 'text-center'
      = f.text_field :last_name, autofocus: true, class: 'form-control'
    .form-group.text-center
      = f.label :email
      = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control'
    .form-group.text-center
      = f.label :password
      = f.password_field :password, autocomplete: 'new-password', class: 'form-control'
      %small.form-text.text-muted= t('.leave_blank_if_you_don_t_want_to_change_it')
    .form-group.text-center
      = f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'
    .form-group.text-center
      = f.label :current_password
      = f.password_field :current_password, autocomplete: 'current-password', class: 'form-control'
      %small.form-text.text-muted= t('.we_need_your_current_password_to_confirm_your_changes')
    .form-group.text-center
      = f.label t(:'views.register.birthdate')
      = f.date_field :birthdate, class: 'form-control'
      .form-group.text-center
      = f.label t(:'views.register.avatar'), class: 'text-center'
      = f.file_field :avatar, class: 'form-control'
    .form-group.text-center
      = f.submit t('.update'), class: 'btn btn-primary'
  %p.text-center
    = t('.unhappy')
    ? #{link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete}.
  %p.text-center= link_to t(:'views.register.back'), :back, class: 'text-center'
